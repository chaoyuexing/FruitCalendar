<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_marginTop="10dp"
              android:layout_width="match_parent"
              android:layout_height="140dp"
    android:layout_marginRight="22dp">

        <ImageView
            android:id="@+id/main_item_iv_category"
            android:layout_width="24dp"
            android:layout_height="27dp"
            android:src="@mipmap/new_order"
            android:layout_marginLeft="16dp"/>


        <ImageView
            android:id="@+id/main_item_iv_fruit"
            android:layout_toLeftOf="@id/main_item_iv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/main_item_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/ko_main_central_text_black"
        android:textSize="@dimen/main_item_title_text"
        android:layout_marginTop="16dp"
        android:text="西班牙阳光大个"/>

    <TextView
        android:id="@+id/main_item_tv_introduce"
        android:layout_below="@id/main_item_tv_title"
        android:layout_marginTop="2dp"
        android:textSize="@dimen/main_item_introduce_text"
        android:textColor="@color/ko_banner_normal_gray"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="满是阳光味道"/>

    <TextView
        android:id="@+id/main_item_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/main_item_title_text"
        android:textColor="@color/ko_banner_selectd_orange"
        android:layout_below="@id/main_item_tv_introduce"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:text="25.9"/>


    <TextView
        android:id="@+id/main_item_tv_mass"
        android:layout_alignBottom="@id/main_item_tv_price"
        android:layout_width="39dp"
        android:layout_height="12dp"
        android:background="@drawable/main_item_tv_mass"
        android:layout_toLeftOf="@id/main_item_tv_price"
        android:layout_marginRight="5dp"
        android:gravity="center"/>


    <TextView
        android:id="@+id/main_item_tv_buy"
        android:layout_width="90dp"
        android:layout_height="24dp"
        android:background="@drawable/main_item_tv_buy"
        android:layout_alignParentRight="true"
        android:layout_below="@id/main_item_tv_price"
        android:layout_marginTop="8dp"/>

</RelativeLayout>