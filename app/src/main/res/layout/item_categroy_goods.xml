<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/category_item_ly"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/ko_tiele_backgroeund_white"
        android:orientation="horizontal"
        android:layout_marginRight="10dp">



        <ImageView
            android:id="@+id/category_item_iv_fruit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical">
            <TextView
                android:id="@+id/category_item_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ko_main_central_text_black"
                android:textSize="@dimen/main_item_title_text"
                android:maxLines="1"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/category_item_tv_introduce"
                android:layout_marginTop="2dp"
                android:textSize="@dimen/main_item_introduce_text"
                android:textColor="@color/ko_banner_normal_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/category_item_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/main_item_title_text"
                android:textColor="@color/ko_banner_selectd_orange"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:paddingLeft="8dp"
                android:gravity="center"
                android:text="25.9"/>



            <TextView
                android:id="@+id/category_item_tv_buy"
                android:layout_width="90dp"
                android:layout_height="24dp"
                android:background="@drawable/main_item_tv_buy"
                android:layout_alignParentRight="true"
                android:text="加入果篮"
                android:gravity="center"
                android:textColor="@color/ko_tiele_backgroeund_white"
                android:textSize="@dimen/main_item_title_text"
                android:layout_marginTop="8dp"/>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_below="@id/category_item_ly"
        android:layout_width="match_parent"
        android:background="@color/ko_item_division_gray"
        android:layout_height="5dp"/>
</RelativeLayout>