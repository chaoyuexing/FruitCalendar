<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/category_type_item_ly"
              android:layout_width="match_parent"
              android:layout_height="44dp"
                android:background="@drawable/category_list_item"
    >
    <View
        android:id="@+id/category_item_division"
        android:layout_width="match_parent"
        android:background="@color/ko_caterory_item_division_gray"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/category_item_tv_name"
        android:layout_below="@id/category_item_division"
        android:text="鲜果"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:textColor="@drawable/tab_text"
        android:textSize="14sp"
        android:layout_height="match_parent"/>

</RelativeLayout>